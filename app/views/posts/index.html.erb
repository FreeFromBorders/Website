<%- if user_signed_in? %>
Welcome <%= current_user.first_name%>, this is beginning of a new Era!<br/>
<br>
<br>
<%= form_tag('/posts/save_posts_with_comments_from_facebook_page/',method: 'get') do %>
  <%= label_tag(:fb_id,"Facebook ID:") %>
  <%= text_field_tag(:fb_id) %>
  <br>
  <%= label_tag(:access_token,"Access Token:") %>
  <%= text_field_tag(:access_token) %>
  <br>
  <%= submit_tag("Save & Display") %>
<% end %>
